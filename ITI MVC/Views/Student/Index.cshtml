@using ITI_MVC.Context
@model IEnumerable<Student>


<h1>Students</h1>

<div style="display: flex; flex-direction: row-reverse" class="mb-3">
    <a asp-controller="Student" asp-action="StudentForm" class="btn btn-primary">Create Student</a>
</div>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            Image
        </th>
        
        <th>
            Name
        </th>

        <th>
            Age
        </th>

        <th>
            Email
        </th>

        <th>
            Phone
        </th>

        <th>
            Department
        </th>
        
        <th>
            Options
        </th>

    </tr>


    @if(Model.Count() != 0)
    {
        foreach (var std in Model)
        {
            <tr>
                <td style="text-align:center">
                    <img src="~/images/@std.ImgPath" alt="Alternate Text" width="30px" height="30px" style="border-radius:50%; object-fit: cover;"/>
                </td>
                
                <td>
                    <a asp-controller="Student" asp-action="Details" asp-route-id="@std.ID" >@std.Name</a>
                </td>
                
                <td>
                    @std.Age
                </td>
                
                <td>
                    @std.Email
                </td>
                
                <td>
                    @std.Phone
                </td>
                
                <td>
                    @std.Department.Name
                </td>

                <td>
                    <a class="btn btn-warning text-white" asp-controller="Student" asp-action="Update" asp-route-id="@std.ID">Edit</a>    
                    <a class="btn btn-danger" asp-controller="Student" asp-action="RemoveForm" asp-route-id="@std.ID">Remove</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr colspan="5">No Data Found</tr>
    }

</table>