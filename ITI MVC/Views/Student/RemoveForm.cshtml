@{
}



@model Student

<h1>Delete Student</h1>

<div class="mb-3">
    <label asp-for="ID" class="form-label">ID</label>
    <input type="text" class="form-control" asp-for="ID" value="@Model.ID" disabled>
</div>

<div class="mb-3">
    <label asp-for="Name" class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="Name" value="@Model.Name" disabled>
</div>

<div class="mb-3">
    <label asp-for="Age" class="form-label">Age</label>
    <input type="text" class="form-control" asp-for="Age" value="@Model.Age" disabled>
</div>

<div class="mb-3">
    <label asp-for="Email" class="form-label">Email</label>
    <input type="text" class="form-control" asp-for="Email" value="@Model.Email" disabled>
</div>

<div class="mb-3">
    <label asp-for="Phone" class="form-label">Phone Number</label>
    <input type="text" class="form-control" asp-for="Phone" value="@Model.Phone" disabled>
</div>

<div class="mb-3">
    <label asp-for="Department.Name" class="form-label">Department</label>
    <input type="text" class="form-control" asp-for="Department.Name" value="@Model.Department.Name" disabled>
</div>

<a asp-controller="Student" asp-action="Remove" asp-route-id="@Model.ID" class="btn btn-danger">Delete</a>